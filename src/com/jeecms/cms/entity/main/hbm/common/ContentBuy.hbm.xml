<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.jeecms.cms.entity.main">
	<class
		name="ContentBuy"
		table="jc_content_buy"
	>
		<meta attribute="sync-DAO">false</meta>
		<cache usage="read-write"/>
		<id
			name="id"
			type="java.lang.Long"
			column="content_buy_id"
		>
			<generator class="identity"/>
		</id>
		<property name="orderNumber" column="order_number" type="string" not-null="true" length="50"/>
		<property name="orderNumWeiXin" column="order_num_weixin" type="string" not-null="false" length="100"/>
		<property name="orderNumAliPay" column="order_num_alipay" type="string" not-null="false" length="100"/>
		<property
			name="chargeAmount"
			column="charge_amount"
			type="java.lang.Double"
			not-null="true"
			length="11"
		/>
		<property
			name="authorAmount"
			column="author_amount"
			type="java.lang.Double"
			not-null="true"
			length="11"
		/>
		<property
			name="platAmount"
			column="plat_amount"
			type="java.lang.Double"
			not-null="true"
			length="11"
		/>
		<property
			name="buyTime"
			column="buy_time"
			type="timestamp"
			not-null="true"
			length="19"
		/>
		<property
			name="hasPaidAuthor"
			column="has_paid_author"
			type="boolean"
			not-null="true"
		/>
		<property
			name="chargeReward"
			column="charge_reward"
			type="java.lang.Short"
			not-null="true"
			length="1"
		/>
		
		<many-to-one name="content" column="content_id" class="com.jeecms.cms.entity.main.Content" not-null="true"></many-to-one>
		<many-to-one name="buyUser" column="buy_user_id" class="com.jeecms.core.entity.CmsUser" not-null="true"></many-to-one>
		<many-to-one name="authorUser" column="author_user_id" class="com.jeecms.core.entity.CmsUser" not-null="true"></many-to-one>
		
	</class>	
</hibernate-mapping>