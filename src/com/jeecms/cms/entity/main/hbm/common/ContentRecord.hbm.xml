<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.jeecms.cms.entity.main">
	<class
		name="ContentRecord"
		table="jc_content_record"
	>
		<meta attribute="sync-DAO">false</meta>
		<cache usage="read-write"/>
		<id
			name="id"
			type="java.lang.Long"
			column="content_record_id"
		>
			<generator class="identity"/>
		</id>

		<property
			name="operateTime"
			column="operate_time"
			type="timestamp"
			not-null="true"
			length="19"
		/>
		<property
			name="operateType"
			column="operate_type"
			type="java.lang.Byte"
			not-null="true"
			length="3"
		/>
		
		<many-to-one name="content" column="content_id" class="Content" not-null="true"></many-to-one>
		<many-to-one name="user" column="user_id" class="com.jeecms.core.entity.CmsUser" not-null="true"></many-to-one>
		
	</class>	
</hibernate-mapping>